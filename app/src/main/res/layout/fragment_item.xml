<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_background_gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <com.vcutils.views.PixelImageView
                    android:id="@+id/imageViewItemImage"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/item_gui"
                    android:padding="15dp"
                    android:src="@drawable/stone"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@drawable/item_background_soft_gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textViewItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/model_item"
                    android:textColor="@color/titleColor"
                    android:textSize="11pt"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewItemType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/model_item"
                        android:textColor="@color/subTitleColor"
                        android:textSize="9pt"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <!-- Stackable -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingBottom="5dp"
                        android:text="@string/model_stackable"
                        android:textColor="@color/subsubTitleColor"
                        android:textSize="9pt"/>

                    <TextView
                        android:id="@+id/textViewItemStackable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/yes"
                        android:textColor="@color/subTitleColor"
                        android:textSize="9pt"/>

                </LinearLayout>

                <!-- Durability -->
                <LinearLayout
                    android:id="@+id/linearLayoutDurability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingBottom="5dp"
                        android:text="@string/model_durability"
                        android:textColor="@color/subsubTitleColor"
                        android:textSize="9pt"/>

                    <TextView
                        android:id="@+id/textViewItemDurability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/yes"
                        android:textColor="@color/subTitleColor"
                        android:textSize="9pt"/>

                </LinearLayout>

                <!-- Damage -->
                <LinearLayout
                    android:id="@+id/linearLayoutDamage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingBottom="5dp"
                        android:text="@string/model_damage"
                        android:textColor="@color/subsubTitleColor"
                        android:textSize="9pt"/>

                    <com.vcutils.views.RepeatingImageView
                        android:id="@+id/repeatImageViewDamage"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        app:drawable="@drawable/heart"
                        app:drawableCount="5.5"
                        app:drawablePadding="2dp"/>

                </LinearLayout>

                <!-- Armor -->
                <LinearLayout
                    android:id="@+id/linearLayoutArmor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingBottom="5dp"
                        android:text="@string/model_armor"
                        android:textColor="@color/subsubTitleColor"
                        android:textSize="9pt"/>

                    <com.vcutils.views.RepeatingImageView
                        android:id="@+id/repeatImageViewArmor"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        app:drawable="@drawable/armor"
                        app:drawableCount="3"
                        app:drawablePadding="2dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutResultOfMine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_background_soft_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewItemCanBeResultOfMine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/model_item_can_result_mine"
                    android:textColor="@color/subTitleColor"
                    android:textSize="9pt"/>

                <FrameLayout
                    android:id="@+id/frameBreaks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCanBeCrafted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_background_soft_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBlockCanBeCrafted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/model_block_can_crafted"
                    android:textColor="@color/subTitleColor"
                    android:textSize="9pt"/>

                <FrameLayout
                    android:id="@+id/frameCraftingRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCanCraft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_background_soft_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBlockCanCraft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/model_block_can_craft"
                    android:textColor="@color/subTitleColor"
                    android:textSize="9pt"/>

                <FrameLayout
                    android:id="@+id/frameCrafts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCanBeSmelted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_background_soft_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewItemCanBeSmelted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/model_block_can_smelt"
                    android:textColor="@color/subTitleColor"
                    android:textSize="9pt"/>

                <FrameLayout
                    android:id="@+id/frameSmeltings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutResultOfSmeltings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_background_soft_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewItemCanBeResultOfSmeltings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/model_block_can_result_smelt"
                    android:textColor="@color/subTitleColor"
                    android:textSize="9pt"/>

                <FrameLayout
                    android:id="@+id/frameResultOfSmeltings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCanBeUsedToBrew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_background_soft_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBlockCanBeUsedToBrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/model_potion_can_brew"
                    android:textColor="@color/subTitleColor"
                    android:textSize="9pt"/>

                <FrameLayout
                    android:id="@+id/frameBrews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>